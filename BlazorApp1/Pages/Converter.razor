@page "/converter"   
<PageTitle>Converter</PageTitle>

<h3>Converter</h3>

<label>Kilograms</label>
<input type="number" @bind-value="@Kilos" @bind-value:event="oninput"/>
<label>Grams</label>
<input type="number" @bind-value="@Grams" @bind-value:event="oninput"/>


@*---------------------------------------------------------------------------------------------------------------------*@
@code {
    private double kilos = 1;
    private double grams = 0;

    public double Kilos
    {
        get => kilos;
        set
        {
            grams = value * 1000;
            kilos = value;
        }
    }
    public double Grams
    {
        get => grams;
        set
        {
            grams = value;
            kilos = value / 1000;
        }
    }
}
